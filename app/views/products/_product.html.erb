<div class="card shadow">
	<div class="card-body">
		<div class="hoverinfo">
			<h5 class="card-title"><%= link_to product.title, product.link %></h5>
			<p><%= image_tag product.img_src %></p>
			<p><%= product.description %></p>
		</div>
		<p class="card-text"><%= product.price %></p>
	</div>
</div>
<br>