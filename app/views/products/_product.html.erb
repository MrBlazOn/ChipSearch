<% secondary_info = SecondaryInfo.new(product.link).get_secondary_info %>
<div class="card shadow">
	<div class="card-body">
		<div class="hoverinfo">
				<h5 class="card-title"><%= link_to product.title, product.link %></h5>
			<p><%= image_tag secondary_info[0] %></p>
			<p><%= secondary_info[1] %></p>
		</div>
		<p class="card-text"><%= product.price %></p>
	</div>
</div>
<br>